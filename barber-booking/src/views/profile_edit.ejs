<!-- src/views/profile_edit.ejs -->
<% /* Редактирование профиля пользователя */ %>

<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <title>Редактировать профиль</title>

  <!-- Bootstrap CSS -->
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
    rel="stylesheet"
  >
  <!-- Bootstrap Icons (для иконок, если понадобятся) -->
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" 
    rel="stylesheet"
  >
  <!-- Свой CSS -->
  <link rel="stylesheet" href="/css/main.css">

  <style>
    body, html {
      background-color: #f8f9fa;
      min-height: 100%;
    }
    .edit-container {
      padding-top: 3rem;
      padding-bottom: 3rem;
    }
    .edit-card {
      max-width: 500px;
      margin: 0 auto;
      border-radius: 0.5rem;
      box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075);
    }
    .form-label {
      font-weight: 600;
    }
  </style>
</head>
<body>

  <div class="container edit-container">
    <!-- Карточка с формой редактирования -->
    <div class="card edit-card">
      <div class="card-body">
        <!-- Заголовок -->
        <h2 class="card-title text-center mb-4">
          <i class="bi bi-pencil-square me-2"></i>Редактировать профиль
        </h2>

        <!-- Форма редактирования -->
        <form method="post" action="/profile/edit" class="row g-3">

          <!-- Поле "Имя" -->
          <div class="col-12">
            <label for="inputName" class="form-label">Имя</label>
            <input
              id="inputName"
              type="text"
              name="name"
              value="<%= user.name %>"
              required
              class="form-control"
              placeholder="Введите ваше имя"
            >
          </div>

          <!-- Поле "Фамилия" -->
          <div class="col-12">
            <label for="inputSurname" class="form-label">Фамилия</label>
            <input
              id="inputSurname"
              type="text"
              name="surname"
              value="<%= user.surname || '' %>"
              class="form-control"
              placeholder="Введите вашу фамилию"
            >
          </div>

          <!-- Поле "Почта" -->
          <div class="col-12">
            <label for="inputEmail" class="form-label">Почта</label>
            <input
              id="inputEmail"
              type="email"
              name="email"
              value="<%= user.email %>"
              required
              class="form-control"
              placeholder="example@domain.ru"
            >
          </div>

          <!-- Кнопки "Сохранить" и "Отмена" -->
          <div class="col-12 d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-success">
              <i class="bi bi-check-lg me-1"></i>Сохранить
            </button>
            <a href="/profile" class="btn btn-outline-secondary">
              <i class="bi bi-x-lg me-1"></i>Отмена
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS Bundle -->
  <script 
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
  ></script>
</body>
</html>
